     <div class="grid">
      <% livros.forEach(l => { %>
        <div class="card">
          <div>
            <b><%= l.titulo %></b>
            <small><%= l.autor %></small>
          </div>

          <a href="/emprestar_livro?titulo=<%= l.titulo %>">
            <button>ðŸ“– Pegar</button>
          </a>
        </div>
      <% }) %>
    </div>

    <div class="back-btn">
      <a href="/usuario_area"><button>â¬… Voltar</button></a>
    </div>

  </div>
</body>
</html>
